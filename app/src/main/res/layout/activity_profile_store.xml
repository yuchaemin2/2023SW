<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileStoreActivity">

    <LinearLayout
        android:id="@+id/backgroun1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#FFC370"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/backgroun2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:background="#eee"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="5dp" >

        <ImageView
            android:id="@+id/userProfile"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/NicknameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="사용자 닉네임"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/PointView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="포인트"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_below="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/level_1"
                android:layout_width="300dp"
                android:layout_height="500dp"
                android:layout_margin="30dp"
                android:src="@drawable/level_1"/>

            <ImageView
                android:id="@+id/level_2"
                android:layout_width="300dp"
                android:layout_height="500dp"
                android:layout_margin="30dp"
                android:src="@drawable/level_2"/>

            <ImageView
                android:id="@+id/level_3"
                android:layout_width="300dp"
                android:layout_height="500dp"
                android:layout_margin="30dp"
                android:src="@drawable/level_3"/>

            <ImageView
                android:id="@+id/level_4"
                android:layout_width="300dp"
                android:layout_height="500dp"
                android:layout_margin="30dp"
                android:src="@drawable/level_4" />

            <ImageView
                android:id="@+id/level_5"
                android:layout_width="300dp"
                android:layout_height="500dp"
                android:layout_margin="30dp"
                android:src="@drawable/level_5" />

            <ImageView
                android:id="@+id/level_6"
                android:layout_width="300dp"
                android:layout_height="500dp"
                android:layout_margin="30dp"
                android:src="@drawable/level_6" />

            <ImageView
                android:id="@+id/level_7"
                android:layout_width="300dp"
                android:layout_height="500dp"
                android:layout_margin="30dp"
                android:src="@drawable/level_7" />

            <ImageView
                android:id="@+id/level_8"
                android:layout_width="300dp"
                android:layout_height="500dp"
                android:layout_margin="30dp"
                android:src="@drawable/level_8" />

            <ImageView
                android:id="@+id/level_9"
                android:layout_width="300dp"
                android:layout_height="500dp"
                android:layout_margin="30dp"
                android:src="@drawable/level_9" />

        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>