<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity"
    android:background="#eeeeee">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_back"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="새 게시물"
            android:textSize="18dp"
            android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/cameraBtn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/toolbar_back"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/background_radius_stroke"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageArea"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:tint="#FCAB64"
                android:src="@drawable/baseline_collections_black_48" />

            <TextView
                android:id="@+id/countArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/0"
                android:textColor="#999999"
                android:textSize="14sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cameraBtn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/write"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_below="@id/cameraBtn">

                <ImageView
                    android:id="@+id/userProfile"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/user" />

                <EditText
                    android:id="@+id/write_text"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/userProfile"
                    android:layout_centerVertical="true"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"/>

                <!--        <ImageView-->
                <!--            android:id="@+id/food_image"-->
                <!--            android:layout_width="40dp"-->
                <!--            android:layout_height="40dp"-->
                <!--            android:layout_alignParentRight="true"-->
                <!--            android:layout_marginStart="15dp"-->
                <!--            android:layout_marginTop="15dp"-->
                <!--            android:layout_marginEnd="15dp"-->
                <!--            android:layout_marginBottom="15dp"-->
                <!--            android:src="@drawable/icon" />-->

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/food_divide"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="#ffffff"
                android:layout_below="@id/write">

                <EditText
                    android:id="@+id/food_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#aaa"
                    android:hint="음식 분류"
                    android:textColorHint="#aaa"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/food_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="#ffffff"
                android:layout_below="@id/food_divide">

                <EditText
                    android:id="@+id/food_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#aaa"
                    android:hint="식사 시간"
                    android:textColorHint="#aaa"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"/>

                <!--        <Spinner-->
                <!--            android:id="@+id/food_time_text"-->
                <!--            android:layout_width="wrap_content"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:textColor="#aaa"-->
                <!--            android:text="식사 시간"-->
                <!--            android:entries="@array/option"-->
                <!--            android:layout_centerVertical="true"-->
                <!--            android:layout_marginLeft="15dp"-->
                <!--            android:textSize="15dp"/>-->

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/where"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="#ffffff"
                android:layout_below="@id/food_time">

                <EditText
                    android:id="@+id/where_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="식사 장소"
                    android:textColor="#aaa"
                    android:textColorHint="#aaa"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="#ffffff"
                android:layout_below="@id/where">

                <EditText
                    android:id="@+id/company_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="#aaa"
                    android:textColor="#aaa"
                    android:hint="함께한 사람들"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="#ffffff"
                android:layout_below="@id/company">

                <EditText
                    android:id="@+id/memo_text"
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    android:textColor="#aaa"
                    android:textColorHint="#aaa"
                    android:hint="메모"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test1"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>